package ClassTest;

import java.util.Scanner;

class TemperatureConverter {
    private double temperature;

    public TemperatureConverter() {
        this.temperature = 0;
    }

    public double getTemperature() {
        return temperature;
    }

    public double celsiusToFahrenheit(double celsius) {
        return (celsius * 9/5) + 32;
    }

    public double fahrenheitToCelsius(double fahrenheit) {
        return (fahrenheit - 32) * 5/9;
    }
}

public class TempApp {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        TemperatureConverter tempConverter1 = new TemperatureConverter();
        TemperatureConverter tempConverter2 = new TemperatureConverter();

        System.out.print("Enter the temperature in Celsius: ");
        double celsiusTemp = scanner.nextDouble();
        tempConverter1 = new TemperatureConverter();
       

        System.out.print("Enter the temperature in Fahrenheit: ");
        double fahrenheitTemp = scanner.nextDouble();

        System.out.println(celsiusTemp + " Celsius is equal to " + tempConverter1.celsiusToFahrenheit(celsiusTemp) + " Fahrenheit");
        System.out.println(fahrenheitTemp + " Fahrenheit is equal to " + tempConverter2.fahrenheitToCelsius(fahrenheitTemp) + " Celsius");
    }
}


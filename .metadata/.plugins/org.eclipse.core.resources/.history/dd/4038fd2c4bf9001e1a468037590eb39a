package lecture_9_part2;

public class ex1 implements Runnable{
	ex1_1 e1;
	public ex1(ex1_1 e1) {
		this.e1=e1;
	}
	
	public void run() {
		synchronized(e1) {
			
			try {
				e1.wait();
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
			for (int i=0;i<10;i++) {
				System.out.println(Thread.currentThread().getName()+" = "+i);
			}
		}
	}
}

public class ex1_1{
	

	public static void main(String[] args) {
		ex1_1 e1=new ex1_1();
		ex1 t1=new ex1(e1);
		t1.start();

	}
}


package lecture_9_part2;

public class ThreadWait extends Thread{
	Ex02 ex02;
	public ThreadWait(Ex02 ex02) {
		this.ex02=ex02;
	}
	
	public void run() {
		synchronized(ex02) {
			System.out.println("Starting the execution of wait thread");
			try {
				ex02.wait();
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
			for (int i=0;i<10;i++) {
				System.out.println(Thread.currentThread().getName()+" = "+i);
			}
		}
	}
}

public class Ex02{
	

	public static void main(String[] args) {
		Ex02 ex02=new Ex02();
		ThreadWait t1=new ThreadWait(ex02);
		t1.start();

	}
}


package lecture_9_part2;

public class Ex02 extends Thread{
	Ex02 ex02;
	
	public Ex02(Ex02 ex02) {
		this.ex02=ex02;
	}
	
	public void run() {
		synchronized(ex02) {
			System.out.println("Starting the execution of wait thread");
			try {
				ex02.wait();
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
			for (int i=0;i<10;i++) {
				System.out.println(Thread.currentThread().getName()+" = "+i);
			}
		}
	}
}



class ThreadNotify extends Thread{
	Ex02 ex02;
	
	public ThreadNotify(Ex02 ex02) {
		this.ex02=ex02;
	}
	
	public void run() {
		synchronized(ex02) {
			System.out.println("Starting the execution of notify thread execution");
			ex02.notify();
			System.out.println("After notifying Thread");
		
		}
	}
}


class Ex02{
	

	public static void main(String[] args) {
		Ex02 ex02=new Ex02();
		Ex02 t1=new Ex02(ex02);
		ThreadNotify t2=new ThreadNotify(ex02);
		t1.start();
		t2.start();

	}
}